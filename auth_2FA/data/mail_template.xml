<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="user_auth_2fa_email" model="mail.template">
            <field name="name">2FA Authentication</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="email_from">${object.company_id.email | safe}</field>
            <field name="email_to">${object.login or ''}</field>
            <field name="subject">Security code.</field>
            <field name="body_html" type="html">
            <header>
                <p style="font-size:30px">Security ${object.company_id.name}</p>
            </header>
            <p>
                Hello ${object.name},<br/><br/>
                This is your code: ${object.twoFA_code}
            </p>
            <footer>
                <p>Author: Hege Refsnes<br>
                <a href="mailto:${object.company_id.email | safe}">${object.company_id.email | safe}</a></p>
            </footer>
            </field>
        </record>
    </data>
</odoo>